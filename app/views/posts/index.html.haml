- title "Blog"
%article
  - @posts.in_groups_of(2, false).each_with_index do |group, index|
    %div{ :id => "column#{index}" }
      - group.each do |post|
        %h2= link_to post.title, post_path(post)
        %p.meta
          Posted on
          %abbr{ :title => post.created_at.iso8601 }
            = ordinalize(post.created_at)
          @
          %abbr.geo{ :title => "#{post.location.latitude};#{post.location.longitude}" }
            = post.location.label
        %p= truncate strip_tags(post.content), :length => 500
%aside
  %h2 Search
  = form_tag search_path, :method => 'get' do
    = text_field_tag :q, nil, :size => 25, :maxlength => 100, :type => "text", :placeholder => "Search at #{APP_CONFIG['title']}"
    %button#search
      = image_tag "loupe.png", :alt => "Search"
  %h2 Even older
  - if @archive
    %table{ :id => "archive", :summary => "Some older posts" }
      %tbody
        - @archive.each do |post|
          %tr
            %td.expand= link_to post.title, post_path(post)
            %td.meta
              %abbr{ :title => post.created_at.iso8601 }
                = ordinalize(post.created_at)
        %tr
          %td#archive_link{ :colspan => 2 }= link_to "archive &rarr;".html_safe, archive_path
