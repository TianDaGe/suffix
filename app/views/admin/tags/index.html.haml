%h2= title "Tags"

%ul
  - @tags.each do |tag|
    %li
      = tag.name
      %span
        = link_to "Edit", edit_admin_tag_path(tag)
        = link_to "Delete", admin_tag_path(tag), :method => :delete, :confirm => "Are you sure you want to delete this tag?"
%p
  = link_to "Add", new_admin_tag_path
