%h2= title "Posts"

%ul
  - @posts.each do |post|
    %li
      = post.title
      %span.actions
        = link_to "Edit", edit_admin_post_path(post), :class => "button"
        = link_to "Delete", admin_post_path(post), :method => :delete, :confirm => "Are you sure you want to delete this post?"
%p
  = link_to "Add", new_admin_post_url