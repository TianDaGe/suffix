%article
  %h2
    = title "Posts"
    = link_to "+", new_admin_post_url, :class => "action"

  %table
    %thead
      %tr
        %th Title
        %th Comments
    %tbody
      - @posts.each do |post|
        %tr
          %td= link_to post.title, post_path(post)
          %td
            = post.comments.count
            = "(closed)" unless post.comments_open?
          %td
            = link_to "Edit", edit_admin_post_path(post)
            = link_to "Delete", admin_post_path(post), :method => :delete, :confirm => "Are you sure you want to delete this post?"
